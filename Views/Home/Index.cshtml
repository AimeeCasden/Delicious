<!DOCTYPE html>
<html>
<head>
    <style>
        html,body{
            background-image: url("/images/lemon.jpg");
            background-repeat: no-repeat;
            background-size: 100%;
        }
        h1{
            text-align: center;
        }
        button{
            background-color:grey;
            border: 1px  solid black;
            margin-left: 45%;
            text-decoration: none;
            text-align: center;
        }
        button:hover {
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
        }
        a{
            color: black;
            text-decoration: none;
        }
        h3{
            text-decoration: underline;
        }
    </style>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>CRUDELICIOUS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css">
    <script src="main.js"></script>
</head>
<body>
    <h1>Welcome To CRUDelicious!</h1>
    <br>
   <button><a href="AddDish">Add A Dish</a></button> 
    <br>
    <br>
    <h3>Check out some recipes:</h3>
    
    <br>
    

<div id = "loop">
       @foreach(var x in @ViewBag.Dishes){
               <a href="ViewDish/@x.UserId"><h4>@x.Name</h4></a><p>by @x.Chef</p>  
            }

</div>       
    
    
</body>
</html>